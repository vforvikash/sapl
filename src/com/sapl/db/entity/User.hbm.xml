<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping SYSTEM
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.sapl.db.data.User" table="USER_TBL">
      <meta attribute="class-description">
         This class is a user data.
      </meta>
      <id name="id" type="int" column="USER_ID">
         <generator class="native"/>
      </id>
      <property name="loginName" column="USER_LOGIN" type="string"/>
      <property name="password" column="USER_PASSWORD" type="string"/>
   </class>
</hibernate-mapping>