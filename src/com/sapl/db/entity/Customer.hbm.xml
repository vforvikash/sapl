<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping SYSTEM
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sapl.db.data.Customer" table="CUSTOMER_TBL">
		<meta attribute="class-description">
			This is a Customer class
		</meta>
		<id name="id" type="int" column="ID">
			<generator class="increment" />
		</id>

		<property name="name" column="NAME" type="string" />
		<property name="contactPerson" column="CONTACTPERSON" type="string" />
		<property name="description" column="DESCRIPTION" type="string" />
		<property name="note" column="NOTE" type="string" />
		<property name="address" column="ADDRESS" type="string" />
		<property name="phone" column="PHONE" type="long" />

	</class>
</hibernate-mapping>